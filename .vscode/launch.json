{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach (Remote Debug)",
            "type": "python",
            "request": "attach",
            "port": 13000,
            "host": "192.168.99.100",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/py/app",
                    "remoteRoot": "/app"
                }
            ],
            "redirectOutput": false
        },
        {
            "name": "Attach (Server Debug)",
            "type": "python",
            "request": "attach",
            "port": 13000,
            "host": "remote_host_tbd",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/py/app",
                    "remoteRoot": "/app"
                }
            ],
            "redirectOutput": false
        }
    ]
}